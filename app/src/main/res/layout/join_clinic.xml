<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_back"
    tools:context=".JoinClinicActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="415dp"
        android:layout_height="509dp"
        android:layout_marginTop="235dp"
        android:foreground="@drawable/sign_as_patient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/patient"
            android:contentDescription="TODO" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="364dp"
        android:layout_height="336dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71">

        <EditText
            android:id="@+id/clinicId"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_margin="14dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/ic_baseline_how_to_reg_24"
            android:drawablePadding="5dp"
            android:elevation="10dp"
            android:ems="10"
            android:hint="@string/inputClinicId"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingLeft="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.205" />

        <EditText
            android:id="@+id/clinicPwd"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_margin="14dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/ic_baseline_visibility_off_24"
            android:drawablePadding="5dp"
            android:elevation="6dp"
            android:ems="10"
            android:hint="@string/inputPwd"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingLeft="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.447" />

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="211dp"
            android:layout_height="66dp"
            android:layout_marginTop="136dp"
            android:elevation="8dp"
            android:text="@string/joinButton"
            app:backgroundTint="#101210"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clinicId" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="@string/banner"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docEdtBtn"
        app:layout_constraintVertical_bias="0.231" />

    <ImageView
        android:id="@+id/docEdtBtn"
        android:layout_width="140dp"
        android:layout_height="108dp"
        android:contentDescription="ptlogo"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/patient" />

</androidx.constraintlayout.widget.ConstraintLayout>